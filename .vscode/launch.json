    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome against localhost, with sourcemaps",
            "type": "chrome",
            "url": "http://localhost:8080",
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}"
        },
        {
            "name": "Attach do Chrome, with sourcemaps",
            "type": "chrome",
            "request": "attach",
            "port": 9515,
            "sourceMaps": true,
            "webRoot": "${workspaceRoot}"
        }
    ]
}